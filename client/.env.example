# Client Environment Variables
# Copy this file to .env and fill in your actual values
# Note: React requires environment variables to be prefixed with REACT_APP_

# Application Environment
REACT_APP_NODE_ENV=development

# API Configuration (for production: set REACT_APP_API_ROOT at build time to your backend URL over HTTPS, e.g. https://your-app.onrender.com â€” no port, no http)
REACT_APP_API_ROOT=http://localhost:8000

# RapidAPI Configuration
REACT_APP_X_RAPIDAPI_KEY=your-rapidapi-key-here

# Merriam-Webster API Keys
REACT_APP_MW_THES_KEY=your-merriam-webster-thesaurus-key-here
REACT_APP_MW_DICT_KEY=your-merriam-webster-dictionary-key-here
